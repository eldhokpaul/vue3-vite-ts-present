{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "*.d.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "lib": ["es2017"],
    "baseUrl": ".",
    "types": ["unplugin-icons/types/vue"],
    "paths": {
      "@/*": ["./src/*"],
      "@utils/*": ["./src/utils/*"],
      "@ts-types/*": ["./src/types/*"],
      "@composables/*": ["./src/composables/*"]
    }
  }
}
